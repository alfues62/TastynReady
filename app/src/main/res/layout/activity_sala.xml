<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_mask">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Mi Reserva"
        android:textAlignment="center"
        android:textColor="@color/AmarilloTYR"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="48dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_backarrow" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/nunito_sans"
        android:text="Temperatura en Sala:"
        android:textColor="@color/AzulTYR"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

    <TextView
        android:id="@+id/cambiTemperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/nunito_sans"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView6" />

    <Button
        android:id="@+id/decrementButton2"
        style="@style/BotonApp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/boton_background"
        android:backgroundTint="@color/AzulTYR"
        android:text="-"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/cantidad2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:inputType="number"
        android:text="0"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/decrementButton2"
        app:layout_constraintTop_toTopOf="@+id/decrementButton2" />

    <Button
        android:id="@+id/incrementButton2"
        style="@style/BotonApp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/boton_redondo"
        android:text="+"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/cantidad2"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/luzCalida"
        style="@style/BotonApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luz Calida"
        app:layout_constraintEnd_toStartOf="@+id/luzFria"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <Button
        android:id="@+id/luzFria"
        style="@style/BotonApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luz Fria"
        app:layout_constraintEnd_toStartOf="@+id/luzTenue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/luzCalida"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <Button
        android:id="@+id/luzTenue"
        style="@style/BotonApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luz Tenue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/luzFria"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <Button
        android:id="@+id/decrementButton"
        style="@style/BotonApp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/boton_redondo"
        android:text="-"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cantidad"
        app:layout_constraintEnd_toStartOf="@+id/cantidad" />

    <EditText
        android:id="@+id/cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:clickable="false"
        android:focusable="false"
        android:inputType="number"
        android:text="0"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/luzCalida"
        app:layout_constraintTop_toBottomOf="@+id/luzCalida" />

    <Button
        android:id="@+id/incrementButton"
        style="@style/BotonApp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/boton_redondo"
        android:text="+"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cantidad"
        app:layout_constraintStart_toEndOf="@+id/cantidad" />

    <Button
        android:id="@+id/enviar"
        style="@style/BotonApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        app:layout_constraintEnd_toStartOf="@+id/botonCamarero"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />


    <Button
        android:id="@+id/enviar2"
        style="@style/BotonApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Enviar Temperatura"
        app:layout_constraintEnd_toStartOf="@+id/textView16"
        app:layout_constraintStart_toEndOf="@+id/incrementButton2"
        app:layout_constraintTop_toBottomOf="@+id/cambiTemperatura" />

    <Button
        android:id="@+id/botonCamarero"
        style="@style/BotonApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LLamar al camarero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/enviar"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cantidad" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

</androidx.constraintlayout.widget.ConstraintLayout>